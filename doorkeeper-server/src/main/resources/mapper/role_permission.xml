<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.limbo.doorkeeper.server.dao.RolePermissionMapper" >

    <insert id="batchInsertOrUpdate" parameterType="org.limbo.doorkeeper.api.model.param.RolePermissionAddParam">
        INSERT INTO l_role_permission (
          role_id, permission_id
        ) VALUES
        <foreach collection="rolePermissions" separator="," item="rolePermission">
            ( #{rolePermission.roleId}, #{rolePermission.permissionId} )
        </foreach>
        ON DUPLICATE KEY UPDATE
        is_deleted = true
    </insert>

</mapper>